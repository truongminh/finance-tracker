
<div class="row">
  <div class="col-sm-9">
    <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Full Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td scope="row"><%= friend.email %></td>
          <td><%= friend.full_name %></td>
          <td>
            <%= link_to "View Profile", user_path(friend), class: "btn btn-xs btn-success" %>
            <%= link_to "Stop watching", friendship_path(friend), method: :delete, class: "btn btn-xs btn-warning" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
